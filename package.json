{
  "name": "@cornerstone-digital/loggerhead",
  "version": "1.0.0",
  "main": "dist/loggerhead.cjs.js",
  "module": "dist/loggerhead.esm.js",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "bili",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "start": "ts-node ./src/playground/index.ts",
    "playground": "cross-env DEBUG=Loggerhead* nodemon --exec yarn start"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "nodemonConfig": {
    "ext": "js, ts, properties",
    "watch": [
      "**/*"
    ],
    "ignore": [
      "dist/*",
      "coverage/*",
      "**/*.test.ts"
    ],
    "delay": "2000"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/flat": "^0.0.28",
    "@types/jest": "^24.0.19",
    "bili": "^4.8.1",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "mockdate": "^2.0.5",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "dayjs": "^1.8.16",
    "debug": "^4.1.1",
    "flat": "^5.0.0",
    "tslib": "^1.10.0"
  }
}
